    <div class="main-packges-title">


        <h1>Retail Centers</h1>
        <div class="table-container">
            <table class="table table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Retail center ID</th>
                        <th scope="col">Center Name</th>
                        <th scope="col">Center Address</th>
                        <th scope="col">Center Location</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i=0; i<retail_centers.length; i++){ %>

                        <tr>
                            <!-- for loop to show all retail centers in retail_centers -->
                            <td scope="row">
                                <%= retail_centers[i].retail_center_id %>
                            </td>
                            <td scope="row">
                                <%= retail_centers[i].center_name %>
                            </td>
                            <td scope="row">
                                <%= retail_centers[i].center_address %>
                            </td>
                            <td scope="row">
                                <%= retail_centers[i].location_name %>
                            </td>
                        </tr>
                        <% } %>

            </table>
