    <form action="/editPackage" class="form" method="post">
        <h2 class="Register-text">Add Package</h2>
 
    
        <!-- Steps -->
          <div class="input-group">
    
            <label for="package_id">Package id</label>
            <input type="package_id" name="package_id" id="package_id" class="package_id" placeholder="" >
    
            <br>
    
            <label for="package_name">Package name</label>
            <input type="text" name="package_name" id="package_name" class="package_name" placeholder="" >
    
            <br>
    
            <label for="weight">Weight (kg)</label>
            <input type="number" name="weight" id="weight" class="weight" placeholder="" >
    
          </div>
    
    
         
    
          <div>
            <!-- this needs to be updated to better selector -->
            <label for="destination">Destination</label>
            <input type="text" name="destination" id="destination" >
          </div>
    
          <br>
    
          <div>
            <label for="status">status</label>
            <select id="status" name="status" class="status" >
              <option value="">Select status</option>
              <option value="in transit">in transit</option>
              <option value="lost">lost</option>
              <option value="delayed">delayed</option>
              <option value="damaged">damaged</option>
              <option value="delivered">delivered</option>
            </select>
          </div>
    
          <br>
    
          <div>
            <label for="dimentions">Dimentions</label>
            <input type="text" name="dimentions" id="dimentions">
          </div>
    
          <br>
        <div>
          <label for="insurance_amount">Insurance amount</label>
          <input type="number" name="insurance_amount" id="insurance_amount" class="insurance_amount" placeholder="" >
        </div>
    
        
          <br>
    
          <div>
            <label for="catagory">Catagory</label>
            <select id="catagory" name="catagory" class="catagory" >
              <option value="">Select catagory</option>
              <option value="regular">regular</option>
              <option value="fragile">fragile</option>
              <option value="liquid">liquid</option>
              <option value="chemical">chemical</option>
            </select>
          </div>
    
          <br>
          
          <div>
            <label for="date">Delivery date</label>
            <input type="date" name="date" id="date">
          </div>
    
          <div class="center-div">
            <button class="btn btn-success">submit</button>

        </div>
    
    
