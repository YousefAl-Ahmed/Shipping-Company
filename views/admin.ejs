    <h2 class="Register-text">All Packages</h2>

    <div class="table-container">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Package ID</th>
                    <th scope="col">Package Name</th>
                    <th scope="col">Weight</th>
                    <th scope="col">Destination</th>
                    <th scope="col">Status</th>
                    <th scope="col">Dimensions</th>
                    <th scope="col">Insurance amount</th>
                    <th scope="col">Catagory</th>
                    <th scope="col">Delivery Date</th>
                    <th scope="col">Payment Status</th>
                </tr>
            </thead>
            <tbody>
                <% for (let i=0; i < Allpackages.length; i++) { %>
                    <tr>
                        <td>
                            <%=Allpackages[i].package_id%>
                        </td>
                        
                        <td>
                            <%=Allpackages[i].package_name%>
                        </td>
                        <td>
                            <%=Allpackages[i].weight%>
                        </td>
                        <td>
                            <%=Allpackages[i].destination%>
                        </td>
                        <td>
                            <%=Allpackages[i].status%>
                        </td>
                        <td>
                            <%=Allpackages[i].dimensions%>
                        </td>
                        <td>
                            <%=Allpackages[i].insurance_amount%>
                        </td>
                        <td>
                            <%=Allpackages[i].catagory%>
                        </td>
                        <td>
                            <%=Allpackages[i].final_delivery_date%>
                        </td>

                        <td>
                            <%=Allpackages[i].payment_status%>
                        </td>
                    </tr>
                    <% } %>
        </table>
    </div>

    <hr>

    <h2 class="Register-text">All Users</h2>

    <div class="table-container">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">User ID</th>
                    <th scope="col">User Email</th>
                    <th scope="col">Username</th>
                    <th scope="col">is admin</th>
    
                </tr>
            </thead>
            <tbody>
                <% for (let i=0; i < getAllUsers.length; i++) { %>
                    <tr>
                        <td>
                            <%=getAllUsers[i].user_id%>
                        </td>
                        <td>
                            <%=getAllUsers[i].email%>
                        </td>
                        <td>
                            <%=getAllUsers[i].username%>
                        </td>
                     
                        <td>
                            <%=getAllUsers[i].isAdmin%>
                        </td>
                
                    </tr>
                    <% } %>
        </table>
    </div>




</body>

