    <title>Document</title>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Navbar</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="/user-page/<%=userInfo.username%>">Home </span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/user-page/<%=userInfo.username%>/profile"> Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/user-page/<%=userInfo.username%>/send-package"> Send packages</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/user-page/<%=userInfo.username%>/receive-package"> Receive packages</a>
                </li>

                <li class="nav-item">
                    <a href="/logout"> <button type="button" class="btn btn-secondary">Logout</button>
                    </a>
                </li>

            </ul>
        </div>
    </nav>
    <form class="form" method="post">
        <h2 class="Register-text">Add Package</h2>

        <div class="drop-down-div">
            <label for="username">user names</label>

            <!-- <select name="username" id="username"> -->
            <input type="text" name="username" value="<%=userInfo.username%>" disabled>


        </div>

        <div>
            <label for="reciever_name">Reciever name</label>
            <select name="reciever_name" id="reciever_name">
                <option value="">Select reciever name</option>

                <% for (let i=0; i < users.length; i++) { %>
                    <option value="<%= users[i].username %>">
                        <%= users[i].username %>
                    </option>
                    <% } %>
            </select>
        </div>
        <!-- Steps -->
        <div class="input-group">
            <br>


            <!-- <input type="reciever_name" name="reciever_name" id="reciever_name" class="reciever_name" placeholder=""> -->

            <br>

            <label for="username">Package name</label>
            <input type="text" name="package_name" id="package_name" class="package_name" placeholder="" required>

            <br>

            <label for="weight">Weight (kg)</label>
            <input type="number" name="weight" id="weight" class="weight" placeholder="" required>

        </div>




        <div>
            <!-- this needs to be updated to better selector -->

            <br>

            <div>
                <label for="status">status</label>
                <select id="status" name="status" class="status" required>
                    <option value="">Select status</option>
                    <option value="in transit">in transit</option>
                    <option value="lost">lost</option>
                    <option value="delayed">delayed</option>
                    <option value="damaged">damaged</option>
                    <option value="delivered">delivered</option>
                </select>
            </div>

            <div>
                <label for="retail_center">Retail Center</label>
                <select id="retail_center" name="retail_center" class="retail_center" required>
                    <option value="">Select retail center</option>
                    <option value="Dammam">Dammam center</option>
                    <option value="Riyadh">Riyadh center</option>
                    <option value="Jeddah">Jeddah center</option>
                    <option value="Jazan">Jazan center</option>
                    <option value="Khobar">Khobar center</option>
                </select>
            </div>


            <br>

            <div>
                <label for="dimentions">Dimentions</label>
                <input type="text" name="dimentions" id="dimentions">
            </div>

            <br>
            <!-- <div>
                <label for="insurance_amount">Insurance amount</label>
                <input type="number" name="insurance_amount" id="insurance_amount" class="insurance_amount"
                    placeholder="" required>
            </div> -->


            <br>

            <div>
                <label for="catagory">Catagory</label>
                <select id="catagory" name="catagory" class="catagory" required>
                    <option value="">Select catagory</option>
                    <option value="regular">regular</option>
                    <option value="fragile">fragile</option>
                    <option value="liquid">liquid</option>
                    <option value="chemical">chemical</option>
                </select>
            </div>

            <br>

            <div>
                <label for="date">Delivery date</label>
                <input type="date" name="date" id="date" required>
            </div>

            <div class="btns-group">
                <button class="btn">submit</button>
            </div>


    </form>

    <!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
    Launch demo modal
  </button>
  
  <!-- Modal -->


</body>

</html>