<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
        integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">


    <title>User Page</title>
</head>

<body>
    <!-- include navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Navbar</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="/user-page/<%=userInfo.username%>">Home </span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/user-page/<%=userInfo.username%>/profile"> Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/user-page/<%=userInfo.username%>/send-package"> Send packages</a>
                <li class="nav-item">

                    <a href="/logout"> <button type="button" class="btn btn-secondary">Logout</button>
                    </a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="main-packges-title">
        <h1>My Packages</h1>
    </div>

    <div class="table-container">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Package ID</th>
                    <th scope="col">Package Name</th>
                    <th scope="col">Weight</th>
                    <th scope="col">Destination</th>
                    <th scope="col">Status</th>
                    <th scope="col">Dimensions</th>
                    <th scope="col">Incurance amount</th>
                    <th scope="col">Catagory</th>
                    <th scope="col">Delivery Date</th>
                    <th scope="col">Payment status</th>
                </tr>
            </thead>
            <tbody>
                <% for (let i=0; i < packages.length; i++) { %>
                    <tr>
                        <td>
                            <%=packages[i].package_id%>
                        </td>
                        <td>
                            <%=packages[i].package_name%>
                        </td>
                        <td>
                            <%=packages[i].weight%>
                        </td>
                        <td>
                            <%=packages[i].destination%>
                        </td>
                        <td>
                            <%=packages[i].status%>
                        </td>
                        <td>
                            <%=packages[i].dimensions%>
                        </td>
                        <td>
                            <%=packages[i].insurance_amount%>
                        </td>
                        <td>
                            <%=packages[i].catagory%>
                        </td>
                        <td>
                            <%=packages[i].final_delivery_date%>
                        </td>
                        <td>
                            <%=packages[i].payment_status%>
                    </tr>
                    <% } %>
        </table>
    </div>
    <div>
        <hr>

    </div>
    <!-- textfield to input a package id and show it in a table -->
    <div class="">
        <form action="/user-page/<%=userInfo.username%>/packages" method="POST">
            <div class="">
                <label for="package-id">Search Package</label>

                <select class="" id="package-id" name="package-id">
                    <option value="">
                        Select package id to search for
                    </option>
                    <% for (let i=0; i < packages.length; i++) { %>

                        <option value="<%=packages[i].package_id%>">
                            <%=packages[i].package_id%>
                        </option>
                        <% } %>
            </div>
            <button type="submit" class="btn btn-primary">Search</button>
        </form>
    </div>
    <!-- table to show the searched package -->
    <div class="table-container">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Package ID</th>
                    <th scope="col">Package Name</th>
                    <th scope="col">Weight</th>
                    <th scope="col">Destination</th>
                    <th scope="col">Status</th>
                    <th scope="col">Dimensions</th>
                    <th scope="col">Incurance amount</th>
                    <th scope="col">Catagory</th>
                    <th scope="col">Delivery Date</th>
                    <th scope="col">Payment status</th>
                </tr>
            </thead>
            <tbody>
                <% for (let i=0; i < searchedPackages.length; i++) { %>
                    <tr>
                        <td>
                            <%=searchedPackages[i].package_id%>
                        </td>
                        <td>
                            <%=searchedPackages[i].package_name%>
                        </td>
                        <td>
                            <%=searchedPackages[i].weight%>
                        </td>
                        <td>
                            <%=searchedPackages[i].destination%>
                        </td>
                        <td>
                            <%=searchedPackages[i].status%>
                        </td>
                        <td>
                            <%=searchedPackages[i].dimensions%>
                        </td>
                        <td>
                            <%=searchedPackages[i].insurance_amount%>
                        </td>
                        <td>
                            <%=searchedPackages[i].catagory%>
                        </td>
                        <td>
                            <%=searchedPackages[i].final_delivery_date%>
                        </td>
                        <td>
                            <%=searchedPackages[i].payment_status%>
                    </tr>
                    <% } %>
        </table>
    </div>
    <!-- include footer -->
    <footer class="footer">
        <div class="container">
            <span class="text-muted">Place sticky footer content here.</span>

</body>

</html>