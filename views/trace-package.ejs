<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
        integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">


    <title>Document</title>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Navbar</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="/user-page/<%=userInfo.username%>">Home </span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/user-page/<%=userInfo.username%>/profile"> Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/user-page/<%=userInfo.username%>/send-package"> Send packages</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/user-page/<%=userInfo.username%>/receive-package"> Receive packages</a>
                </li>

                <li class="nav-item">
                    <a href="/logout"> <button type="button" class="btn btn-secondary">Logout</button>
                    </a>
                </li>

            </ul>
        </div>
    </nav>
    <!-- show packages in packageInfo searched by id -->

    <div class="main-packges-title">

        <% if(packageInfo.length==0){ %>
            <div class="no-packages">
                <h1>There is no packages</h1>
            </div>
            <% } else {%>
                <h1>
                    <h1>Tracing package with ID <%= packageInfo.package_id %>
                            %>
                    </h1>
                    <div class="table-container">
                        <table class="table">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col">Package ID</th>
                                    <th scope="col">Package Name</th>
                                    <th scope="col">Weight</th>
                                    <th scope="col">Destination</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Dimensions</th>
                                    <th scope="col">Incurance amount</th>
                                    <th scope="col">Catagory</th>
                                    <th scope="col">Delivery Date</th>
                                    <th scope="col">Payment status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <%=packageInfo.package_id%>
                                    </td>
                                    <td>
                                        <%=packageInfo.package_name%>
                                    </td>
                                    <td>
                                        <%=packageInfo.weight%>
                                    </td>
                                    <td>
                                        <%=packageInfo.destination%>
                                    </td>
                                    <td>
                                        <%=packageInfo.status%>
                                    </td>
                                    <td>
                                        <%=packageInfo.dimensions%>
                                    </td>
                                    <td>
                                        <%=packageInfo.insurance_amount%>
                                    </td>
                                    <td>
                                        <%=packageInfo.catagory%>
                                    </td>
                                    <td>
                                        <%=packageInfo.final_delivery_date%>
                                    </td>
                                    <td>
                                        <%=packageInfo.payment_status%>
                                    </td>

                                </tr>
                        </table>
                    </div>
                    <% } %>
    </div>
    <hr>
    <div class="main-packges-title">

        <% if(packageRoute.length==0){ %>
            <div class="no-packages">
                <h1>The package route is still being processed</h1>
            </div>
            <% } else {%>
                <h1>
                    <h1>Package route <%= packageInfo.package_id %>
                            %>
                    </h1>
                    <div class="table-container">
                        <table class="table">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col">Location Id</th>
                                    <th scope="col">Location name</th>
                                    <th scope="col">Day</th>
                                    <th scope="col">Month</th>
                                    <th scope="col">year</th>
                                    <th scope="col">type of transportation</th>
                                    <th scope="col">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for (let i=0; i<packageRoute.length; i++) {%>
                                    <tr>
                                        <td>
                                            <%=packageRoute[i].location_id%>
                                        </td>
                                        <td>
                                            <%=packageRoute[i].location_name%>
                                        </td>
                                        <td>
                                            <%=packageRoute[i].day%>
                                        </td>
                                        <td>
                                            <%=packageRoute[i].month%>
                                        </td>
                                        <td>
                                            <%=packageRoute[i].year%>
                                        </td>
                                        <td>
                                            <%=packageRoute[i].type%>
                                        </td>
                                        <td>
                                            <%=packageInfo.status%>
                                        </td>
                                    </tr>
                                    <% } %>

                        </table>
                    </div>
                    <% } %>
    </div>

</body>

</html>