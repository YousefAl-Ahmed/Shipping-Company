  <div style="display: flex;">

    <form action="/reports/status_catagory_report" class="form" method="post">
      <h2 class="Register-text">Select starting and ending date</h2>

      <div>
        <label for="start_date">Starting Date</label>
        <input type="date" name="start_date" id="dastart_datete" required>
      </div>

      <br>

      <div>
        <label for="end_date">Ending Date</label>
        <input type="date" name="end_date" id="end_date" required>
      </div>

      <br>


      <div class="btns-group">
        <button class="btn">submit</button>

      </div>
    </form>


    <form action="/reports/track-packages" class="form" method="post">
      <h2 class="Register-text">Track Packages</h2>


      <div>
        <label for="catagory">Catagory</label>
        <select id="catagory" name="catagory" class="catagory" required>
          <option value="">Select catagory</option>
          <option value="regular">regular</option>
          <option value="fragile">fragile</option>
          <option value="liquid">liquid</option>
          <option value="chemical">chemical</option>
        </select>
      </div>


      <div>
        <label for="location">Package Location</label>
        <select id="location" name="location" class="location" required>
          <option value="">Select package location</option>
          <option value="Dammam">Dammam </option>
          <option value="Riyadh">Riyadh </option>
          <option value="Jeddah">Jeddah </option>
          <option value="Jazan">Jazan </option>
          <option value="Khobar">Khobar </option>
        </select>
      </div>

      <div>
        <label for="status">Status</label>
        <select id="status" name="status" class="status" required>
          <option value="">Select status</option>
          <option value="in transit">in transit</option>
          <option value="lost">lost</option>
          <option value="delayed">delayed</option>
          <option value="damaged">damaged</option>
          <option value="delivered">delivered</option>
        </select>
      </div>


      <div class="btns-group">
        <button class="btn">submit</button>

      </div>


    </form>


    <form action="/reports/received_sent_packages" class="form" method="post">
      <h2 class="Register-text">Sent/Received Packages for Particular User</h2>
      <div>
        <label for="sent_or_received">Status</label>
        <select id="sent_or_received" name="sent_or_received" class="sent_or_received" required>
          <option value="">Sent or Received</option>
          <option value="sent">Sent</option>
          <option value="received">Received</option>

        </select>
      </div>

      <div>
        <label for="username">Username</label>
        <select name="username" id="username">
            <option value="">Select Username</option>

            <% for (let i=0; i < users.length; i++) { %>
                <option value="<%= users[i].username %>">
                    <%= users[i].username %>
                </option>
                <% } %>
        </select>
    </div>

      <div class="btns-group">
        <button class="btn">submit</button>

      </div>
    </form>



  </div>





