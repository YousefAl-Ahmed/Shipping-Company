    <h2 class="Register-text">Tracked packages</h2>

    <!-- if there is no packges show no packages -->
    <% if (track_packages.length==0) { %>
        <div class="no-packages">
            <h1>There is no packages</h1>
        </div>
        <% } else { %>


            <div class="table-container">
                <table class="table table-striped">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Package ID</th>
                            <th scope="col">Package Name</th>
                            <th scope="col">Weight</th>
                            <th scope="col">Destination</th>
                            <th scope="col">Status</th>
                            <th scope="col">Dimensions</th>
                            <th scope="col">Insurance amount</th>
                            <th scope="col">Catagory</th>
                            <th scope="col">Delivery Date</th>
                            <th scope="col">Payment Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (let i=0; i < track_packages.length; i++) { %>
                            <tr>
                                <td>
                                    <%=track_packages[i].package_id%>
                                </td>

                                <td>
                                    <%=track_packages[i].package_name%>
                                </td>
                                <td>
                                    <%=track_packages[i].weight%>
                                </td>
                                <td>
                                    <%=track_packages[i].destination%>
                                </td>
                                <td>
                                    <%=track_packages[i].status%>
                                </td>
                                <td>
                                    <%=track_packages[i].dimensions%>
                                </td>
                                <td>
                                    <%=track_packages[i].insurance_amount%>
                                </td>
                                <td>
                                    <%=track_packages[i].catagory%>
                                </td>
                                <td>
                                    <%=track_packages[i].final_delivery_date%>
                                </td>

                                <td>
                                    <%=track_packages[i].payment_status%>
                                </td>
                            </tr>
                            <% } %>
                </table>
            </div>
            <% } %>
                <hr>






</body>

</html>