    <link rel="stylesheet" href="/style.css">


    <title>Track Packages</title>
</head>

<body>
    <!-- Admin
    <a href="/logout">logout</a> -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Admin page</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="/admin">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/admin/reports">Reports</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="admin/manage-packages">Manage Packages</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/admin/manage-users">Manage Users</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="/admin/package-route">Package Route</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="/admin/send-email">Send Email</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/logout">logout</a>
                </li>
            </ul>
        </div>
    </nav>


    <div class="table-container">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Package ID</th>
                    <th scope="col">Retail center name</th>
                    <th scope="col">Retail center address</th>
                    <th scope="col">location name</th>
                    <th scope="col">Sender name</th>
                    <th scope="col">Payment status</th>
                </tr>
            </thead>
            <tbody>
                <% for (let i=0; i < sent_or_packages_result.length; i++) { %>
                    <tr>
                        <th>
                            <%= sent_or_packages_result[i].package_id %>
                        </th>
                        <td>
                            <%= sent_or_packages_result[i].retail_center_name %>
                        </td>
                        <td>
                            <%= sent_or_packages_result[i].retail_center_address %>
                        </td>
                        <td>
                            <%= sent_or_packages_result[i].location_name %>
                        </td>
                        <td>
                            <%= sent_or_packages_result[i].sender_name %>
                        </td>
                        <td>
                            <%= sent_or_packages_result[i].status %>
                        </td>


                        <% } %>
        </table>
    </div>

    <hr>


   



</body>

</html>